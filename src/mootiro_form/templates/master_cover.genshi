<?python
pd = request.page_deps
pd.stylesheet('master_cover')
pd.onload('''
  $(document).ready(function(){
    $('#header_links').hover(function() {
      $(this).toggleClass('menu-active');
    });
  });
''')

?>

<py:def function="in_head()">
  <py:if test="defined('head_content')">${logged_head()}</py:if>
</py:def>

<py:def function="in_body()">
  <div id="Centralizer">
    <div id="Top" class="Unlogged" py:if="not request.user">
      <div id="Menu">
        <table>
          <tr>
            <td><a href="${url('root')}">Home</a></td>
            <td><a href="#">Documentation</a></td>
            <td><a href="#">Download</a></td>
            <td><a href="#">Contribute</a></td>
            <td><a href="${url('contact')}">Contact</a></td>
          </tr>
        </table>
      </div>
      <div id="LoginBox">
        <div class="title">Login</div>
        ${login_box()}
      </div>
      <img id="Logo" src="${static_url('mootiro_form:static/img/logo.png')}"
        alt='Mootiro Form' title='Mootiro Form' />
    </div>

    <div id="Top" class="Logged" py:if="request.user">
      <div id="Menu">
        <table>
          <tr>
            <td id="Logo">
              <a href='/'>
                <img alt='Mootiro Form' title='Mootiro Form'
                     src="${static_url('mootiro_form:static/img/minimalist_logo.png')}"/>
              </a>
            </td>
            <td><a href='/'>My forms</a></td>
            <td><a href='#'>My reports</a></td>
            <td><a href='#'>Help</a></td>
            <td><a href="${url('contact')}">Contact</a></td>
            <td class="Submenu">
              <ul>
                <li class="title"><a href="#">Settings</a></li>
                <li><a href="${url('user', action='current')}">account</a></li>
                <li><a href="#">profile</a></li>
                <li><a href="#">preferences</a></li>
              </ul>
            </td>
            <td class="Submenu">
              ${login_box()}
            </td>
          </tr>
        </table>
      </div>
    </div>

    <div id="Content" py:if="defined('content')">
      ${content()}
    </div>
    
    <div id="Footer">Copyright Â© 2011
      <a target='_blank' href='http://it3s.org'>it3s</a>
      <div class='locales'>
        <py:for each="loc in request.registry.settings['enabled_locales']">
          <a href="${url('locale', locale=loc)}" py:content='loc[:2]' />
        </py:for>
      </div>
    </div>
  </div>
</py:def>

<xi:include href="master_global.genshi" />
