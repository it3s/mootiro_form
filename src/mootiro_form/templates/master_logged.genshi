<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>

<!--! Applies to all "inner" pages, with an authenticated user.
Includes the top logo and menu, as well as the footer. -->

<?python
pd = request.page_deps
pd.stylesheet('master_logged')
pd.onload('''
  $(document).ready(function(){
    $('#header_links').hover(function() {
      $(this).toggleClass('menu-active');
    });
  });
''')
?>

<py:def function="in_head()">
  <py:if test="defined('head_content')">${logged_head()}</py:if>
</py:def>

<py:def function="in_body()">
  <div id="Centralizer">
      <table id='TopMenu'><tr>
        <td id='TopMenuLogo'><a href='/'><img
          src="${static_url('mootiro_form:static/img/mootiro_form_logo.png')}"
          alt='Mootiro Form' title='Mootiro Form' /></a></td>
        <td><a href='/'>My forms</a></td>
        <td>My results</td>
        <td>Help</td>
        <td class='TopMenuRight'>
          <a href="${url('user', action='current')}">
             Logged in as $request.user</a>&nbsp;</td>
        <td class='TopMenuRight'>
          <form method="post" action="${url('user', action='logout')}">
            <input type="submit" value="Log out" />
          </form>
        </td>
      </tr></table>
    
    <py:if test="defined('logged_body')">${logged_body()}</py:if>
    
    <div id="Footer">Copyright Â© 2011
      <a target='_blank' href='http://it3s.org'>it3s</a>
      <div class='locales'>
        <py:for each="loc in request.registry.settings['enabled_locales']">
          <a href="${url('locale', locale=loc)}" py:content='loc[:2]' />
        </py:for>
      </div>
    </div>
  </div>
</py:def>

<xi:include href="master_global.genshi" />
</html>
