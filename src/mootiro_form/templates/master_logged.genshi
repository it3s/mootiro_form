<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>
  <!--! Applies to all "inner" pages, with an authenticated user. -->
  <py:def function="in_head()">
    <link rel="stylesheet" type="text/css" href="/static/css/master_logged.css" />
    <script type="text/javascript" src="/static/js/jquery-ui.js" />
    <script type="text/javascript" src="/static/js/jquery.infieldlabel.min.js" />
    <script type="text/javascript">
      $(document).ready(function(){
        $('#header_links').hover(function() {
          $(this).toggleClass('menu-active');
        });
        $('.hideLabel').inFieldLabels();
      });
    </script>
    <py:if test="defined('head_content')">${head_content()}</py:if>
  </py:def>
  <py:def function="in_body()">
    <div id="Centralizer">
      <div id="LeftCol">
        <img src='/static/img/mootiro_form_logo.gif' id='AppLogo'
             alt='Mootiro Form' title='Mootiro Form' />
        <py:if test="defined('left_content')">${left_content()}</py:if>
      </div>
      <div id='RightCol'>
        <form id='logout' method="post"
                          action="${url('user', action='logout')}">
          Logged in as
          <a href="${url('user', action='current')}"
             py:content="request.user" />.
          <input id="submit" name="submit" type="submit" value="Log out" />
        </form>
        <div class='ClearBoth'></div>
        <py:if test="defined('right_content')">${right_content()}</py:if>
      </div>
      <div id="footer">Copyright Â© 2011
        <a target='_blank' href='http://it3s.org'>it3s</a>
      </div> <!--! TODO: Footer impossible with absolute positioned layouts -->
    </div>
  </py:def>
  <xi:include href="master_global.genshi" />
</html>
