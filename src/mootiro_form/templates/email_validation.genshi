<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>

<?python
    request.page_deps.package('deform')
?>

  <py:def function="content()">
    <h3>E-mail Validation</h3>
    <py:if test="defined('email_sent')">
      <p>An email was sent to you. Follow the instructions to activate your
      account.</p>
    </py:if>
    <py:if test="defined('invalid_key')">
      <p>The given key is invalid.</p>
    </py:if>
    <py:if test="defined('validated')">
      <p>Your account was succesfully activated. Now you can use $appname .</p>
    </py:if>

    <py:if test="defined('key_form')">
      <p>Your account needs to be activated.<br/>
      <h3>Input the validation code</h3>
      ${Markup(key_form)}
      <a href="${url('email_validation', action='resend')}">Resend validation e-mail</a>
      </p>
    </py:if>
    <py:if test="defined('email_form')">
      <p>
      <h3>Resend the validation e-mail to:</h3>
      ${Markup(email_form)}
      </p>
    </py:if>

  </py:def>

  <xi:include href="master_cover.genshi" />
</html>
