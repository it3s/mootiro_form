      <td>6</td>
      <td>7</td>
    </tr>
    <tr>
      <td class="CollectorName">1</td>
      <td>2</td>
      <td>3</td>
      <td>4</td>
      <td>5</td>
      <td>6</td>
      <td>7</td>
    </tr>
  </script>
  <script type='text/javascript'
      src="${static_url('mootiro_form:static/js/collectors_list.js')}" />
</py:def>

