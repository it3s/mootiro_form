<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>
<?python
request.page_deps.lib('infieldlabel')
request.page_deps.onload('''
$(function() {
  $('#header_links').hover(function() {
    $(this).toggleClass('menu-active');
  });
  $('.hideLabel').inFieldLabels();
});
''')
?>
<div class="login_box" py:def="login_box()">
  <form py:if="not request.user"
        id='login' method="POST" enctype='multipart/form-data'
        action="${url('user', action='login')}">
    <h1>login</h1>
    <div style="position: relative;">
      <label class="hideLabel" for="login_email">${_('e-mail')}</label>
      <input id="login_email" type="text" name="login_email" />
    </div>
    <div style="position: relative;">
      <label class="hideLabel" for="login_pass">${_('password')}</label>
      <input id="login_pass" type="password" name="login_pass" />
    </div>
    <input type="submit" value="Log in" />

    <div id="esqueceu">
      <a href="${url('user', action='recover')}">${_('Forgot your password?')}</a><br />
      <a href="${url('user', action='new')}"
         title='Become a new user'>${_('Sign up')}</a>
    </div>
  </form>

  <form py:if="request.user" id='logout' method="post"
        action="${url('user', action='logout')}">
    <h1>logged in</h1>
    <p>
       <a href="${url('user', action='current')}" class='username'
          py:content="request.user.first_name" title='edit profile' />
    </p>
    <div><input id="submit" name="submit" type="submit" value="Log out" />
    </div>
  </form>
</div>
</html>
