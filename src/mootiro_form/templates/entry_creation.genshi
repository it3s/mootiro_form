<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>

<?python
    request.page_deps.stylesheet('entry_creation')
    request.page_deps.package('deform')
    request.page_deps.lib('ListField')
    request.page_deps.package('jquery.ui')
    request.page_deps.lib('Entry')
?>

<py:def function="in_head()">
  <link rel="stylesheet" type="text/css"
    href="${url('entry_form_slug_css', action='template', slug=form.slug)}" />
</py:def>

<py:def function="in_body()">
  <div id="Content">
    <div id="Header" py:choose='form.status'>
      <py:when test='form.STATUS_DURING'>
        <py:if test="not defined('thanks_message')">
          <h1>${form.name}</h1>
          <p>${form.description}</p>
        </py:if>
        <h1 py:if="defined('thanks_message')">
          ${thanks_message}
        </h1>
      </py:when>

      <h1 py:when="form.STATUS_EDITING">
        Sorry, this form is not published yet.
      </h1>
      <h1 py:when="form.STATUS_BEFORE">
        Sorry, you cannot fill in the form, yet. You can fill in the form from
        the following date on: ${unicode(form.start_date)[:16]}.
      </h1>
      <h1 py:when="form.STATUS_AFTER">
        Sorry, the period for filling in the form has elapsed on
        ${unicode(form.end_date)[:16]}.
      </h1>
    </div>

    <div id="Form">
      ${Markup(form_entry)}
    </div>

    <div id="Footer">
      <hr/>
      <p><a href="/">
          <img alt='Mootiro Form' title='Mootiro Form'
               src="${static_url('mootiro_form:static/img/logo_footer.png')}"/>
      </a></p>
    </div>
    
  </div>
</py:def>

<xi:include href="master_global.genshi" />
</html>
