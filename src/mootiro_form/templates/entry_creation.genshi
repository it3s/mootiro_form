<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:py="http://genshi.edgewall.org/"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      py:strip=''>

<?python
    request.page_deps.stylesheet('entry_creation')
    request.page_deps.package('deform')
    request.page_deps.lib('ListField')
    request.page_deps.package('jquery.ui')
    request.page_deps.lib('Entry')
?>

<py:def function="in_head()">
  <link rel="stylesheet" type="text/css"
    href="${url('entry_form_slug_css', action='template', slug=collector.slug)}" />
</py:def>

<py:def function="in_body()">
  <div id="Content">
    <py:choose test='collector.status'>

      <py:when test='collector.STATUS_DURING'>
        <div id="Header">
          <py:if test="not defined('thanks_message')">
            <h1>${form.name}</h1>
            <p>${form.description}</p>
          </py:if>
          <h1 py:if="defined('thanks_message')">
            ${thanks_message}
          </h1>
        </div>
        <div id="Form" py:if="defined('entry_form')">
          ${Markup(entry_form)}
        </div>
      </py:when>

      <h1 py:when="collector.STATUS_BEFORE">
       <div id="Header">
        Sorry, you cannot fill in the form, yet. You can fill in the form from
        the following date on: ${unicode(collector.start_date)[:16]}.
       </div>
      </h1>
      <h1 py:when="collector.STATUS_AFTER">
       <div id="Header">
        Sorry, the period for filling in the form has elapsed on
        ${unicode(collector.end_date)[:16]}.
       </div>
      </h1>
    </py:choose>



    <div id="Footer">
      <hr/>
      <p><a href="/">
          <img alt='Mootiro Form' title='Mootiro Form'
               src="${static_url('mootiro_form:static/img/logo_footer.png')}"/>
      </a></p>
    </div>
  </div>
</py:def>

<xi:include href="master_global.genshi" />
</html>
