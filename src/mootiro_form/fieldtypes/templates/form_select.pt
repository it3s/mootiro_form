<select tal:attributes="multiple 'multiple' if field.schema.multiple == 'true' else None" name="${field.name}"
        id="${field.oid}">
 <option tal:repeat="(value, description) field.widget.values"
         tal:attributes="selected value in field.schema.options_id;
                         class field.widget.css_class"
         value="${value}">${description}</option>
</select>
